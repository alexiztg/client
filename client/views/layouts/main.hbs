<!DOCTYPE html>
<html lang="es" class="ng-app:gabssa-playground" ng-app="gabssa-playground" xmlns:ng="http://angularjs.org">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="{{assets}}img/favicon.ico">
    <link rel="stylesheet" type="text/css" href="{{assets}}css/app-semantic.css?build=2" />
    <link rel="stylesheet" type="text/css" href="{{url}}semantic/semantic.min.css" />

    <title>GABSSA Playground</title>
  </head>
  <body ng-controller="userCtrl as userCtrl">

    {{#if logged}}

    <div id="menu-horizontal" class="ui fixed inverted menu">
      <div class="ui container">
        <a href="#" id="menu" class="item">
          <i class="list layout basic icon"></i>
        </a>
        <a href="{{url}}" class="header item">
          <img id="logo" class="logo" src="{{assets}}img/logo.png"> Playground - <span class="navbar-brand" style="background-color: #76000A; color: white;" ng-init="userCtrl.getSesion()">{[userCtrl.nombre | capitalize ]} ({[userCtrl.no_empleado]})</span>
        </a>
        <a href="{{url}}inicio" class="item">Inicio</a>
        <a href="{{url}}empresas" class="item">Empresas</a>


        <div class="right menu">
          <div class="ui left simple item">
            <div class="ui left icon input">
              <i class="search icon"></i>
              <input type="text" placeholder="Buscar...">
            </div>
          </div>

          <a href="#" id="notificaciones" class="item">
            <i class="inbox icon large"></i> 20
          </a>

          <a href="#" id="salir" ng-click="userCtrl.logout()" class="item">
            <i class="sign out icon large"></i>
          </a>
        </div>

      </div>
    </div>

    <div id="menu-derecho" class="ui right inverted sidebar vertical menu">
      <div class="pusher">
        <a class="item">
          1
        </a>
        <a class="item">
          2
        </a>
        <a class="item">
          3
        </a>
      </div>
    </div>

    <div id="menu-izquierdo" class="ui left inverted sidebar vertical menu">
      <div class="pusher">
        <a class="item">
          1
        </a>
        <a class="item">
          2
        </a>
        <a class="item">
          3
        </a>
      </div>
    </div>
    {{/if}}

    <div id="cuerpo" class="ui">
    {{{body}}}
    </div>

    <footer>
    </footer>


    <script
    src="{{assets}}js/jquery.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
    crossorigin="anonymous"></script>
    <script src="{{assets}}semantic/semantic.min.js"></script>

    {{#if pruebas }}
      <script src="{{url}}js/build.js?v=2"></script>
    {{else}}
      <script src="{{url}}js/build.min.js?v=2"></script>
    {{/if}}

    {{#if logged}}
      <script type="text/javascript" src="{{url}}socket.io/socket.io.js"></script>
    {{/if}}
  </body>
</html>
