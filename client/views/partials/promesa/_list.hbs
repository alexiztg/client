<table class="ui sortable celled compact small basic table" ng-init="currentPage = 1">
  <thead>
    <tr>
     <th ng-click="orden = 'promesa_id'">promesa_id</th>
     <th ng-click="orden = 'periodo_id'">periodo_id</th>
     <th ng-click="orden = 'cliente_id'">cliente_id</th>
     <th ng-click="orden = 'fecha_generacion'">fecha_generacion</th>
     <th ng-click="orden = 'no_empleado'">no_empleado</th>
     <th ng-click="orden = 'cuenta'">cuenta</th>
     <th ng-click="orden = 'fecha_pago'">fecha_pago</th>
     <th ng-click="orden = 'no_empleado_autoriza'">no_empleado_autoriza</th>
     <th ng-click="orden = 'periodo_ID_1'">periodo_ID_1</th>
     <th ng-click="orden = 'periodo_ID_1_1'">periodo_ID_1_1</th>

    </tr>
  </thead>
  <tbody>
    <tr dir-paginate="i in list_promesa | filter: query | orderBy: orden | itemsPerPage: 12" current-page="currentPage">
     <td class="ui left aligned">{[ i.promesa_id | capitalize ]}</td>
     <td class="ui right aligned">{[ i.periodo_id ]}</td>
     <td class="ui right aligned">{[ i.cliente_id ]}</td>
     <td class="ui left aligned">{[ i.fecha_generacion | capitalize ]}</td>
     <td class="ui right aligned">{[ i.no_empleado ]}</td>
     <td class="ui left aligned">{[ i.cuenta | capitalize ]}</td>
     <td class="ui left aligned">{[ i.fecha_pago | capitalize ]}</td>
     <td class="ui right aligned">{[ i.no_empleado_autoriza ]}</td>
     <td class="ui right aligned">{[ i.periodo_ID_1 ]}</td>
     <td class="ui right aligned">{[ i.periodo_ID_1_1 ]}</td>
    </tr>
  </tbody>
  <tfoot>
    <tr style="text-align: center;">
      <th colspan="100">
        <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)">
        </dir-pagination-controls>
      </th>
    </tr>
  </tfoot>
</table>
